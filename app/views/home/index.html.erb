<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mb-4">Dog Breed Image</h1>
      <form id="dog_form" action="/" method="get">
        <div class="input-group mb-3">
          <input type="text" name="breed" class="form-control" placeholder="Enter breed" id="breed_input">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>

      <div id="dog_image" class="text-center"></div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'index' %>
